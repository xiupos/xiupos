---
import { Icon } from "astro-icon/components";

export interface Props {
  links: {
    link: string;
    icon: string;
  }[];
}

const { links } = Astro.props;
---

<div class="social">
  {
    links.map((link) => (
      <a href={link.link}>
        <Icon name={link.icon} />
      </a>
    ))
  }
</div>

<style lang="scss">
  .social {
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    gap: 0.7em;
    margin: 0 auto 1.5rem;
    font-size: 1.7em;

    a {
      color: inherit;

      &:hover {
        color: var(--accent);
      }
    }
  }
</style>

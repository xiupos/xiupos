:root
  color-scheme: dark;

body
  --accent #e6db74
  --sub #999
  --width 50rem
  --back #333
  --color #ddd
  font-family "Helvetica Neue", Arial, "Hiragino Kaku Gothic ProN", "Hiragino Sans", Meiryo, sans-serif
  margin 0
  padding 1.5rem 0
  background-color var(--back)
  word-wrap break-word
  overflow-wrap break-word
  overflow-x hidden
  line-height 1.8
  color var(--color)

main
  width 100%
  margin-bottom 1.5rem

a
  text-decoration none
  color var(--accent)
  word-break break-all
  transition: 0.2s;
  &:hover
    color inherit

.monospace
  font-family 'Source Code Pro', monospace
  font-weight 400
  text-transform lowercase

article
  --headerMargin 1.7rem
  display block
  margin 0 auto
  text-align center

  > *, pre > code
    width 90%
    max-width var(--width)
    margin var(--headerMargin) auto
    box-sizing border-box
    color var(--color)
    overflow hidden
    text-align left

  > h1, > h2, > h3, > h4, > h5
    margin-top 3rem

    &+h1, &+h2, &+h3, &+h4, &+h5
      margin-top var(--headerMargin)

  mjx-container[jax="CHTML"]
    font-size 1.2em

    &[display="true"]
      margin var(--headerMargin) auto !important
      overflow hidden
      overflow-x auto

    mjx-xypic
      filter invert()

  header
    display flex
    flex-direction column
    justify-content center
    align-items center
    gap 1rem
    margin-top 2rem
    margin-bottom 3rem

    h1
      margin 0
      text-align center

  div.responsive, p:has(> img)
    display flex
    justify-content center
    align-items center
    width 100%
    max-width calc(var(--width) + 10vw)
    margin-top calc(var(--headerMargin) + 0.5rem)
    margin-bottom calc(var(--headerMargin) + 0.5rem)

    img, video, svg
      margin 0 auto
      max-width 100%
      width unset
      max-height calc(var(--width) + 10vw)
      height auto

      &[src^="data:image/svg+xml;base64"]
        filter invert()

    svg
        filter invert()

    table
      display block
      border-collapse collapse
      overflow-x scroll

      th, td
        padding 0.5rem 1rem
        margin 0

      thead
        th
          background var(--back)
          border-bottom 0.1em solid #888

          &:first-child
            position sticky
            top 0
            left 0
            z-index 1

      tbody
        tr
          &:nth-child(odd)
            td
              background var(--back)

          &:nth-child(even)
            td
              background #2b2b2b

        td:first-child
          position sticky
          top 0
          left 0
          z-index 1

  code-back = #222

  p > code
    padding 0.3em 0.5em
    background-color code-back
    border-radius 0.3em
    margin 0 0.5em
    overflow-wrap break-word

  pre
    padding 1rem 0
    width 100%
    max-width unset
    background-color code-back !important

    > code
      display block
      tab-size 2
      overflow unset

      > *
        margin-right 5vw

  blockquote
    border-left .3rem solid var(--sub)
    padding .2em 1.6em
    font-style italic

  hr
    border unset
    border-top 1px solid var(--sub)

  .katex-display
    overflow hidden
    overflow-x auto

  ::-webkit-scrollbar
    height 4px
    margin 2px

  ::-webkit-scrollbar-track
    background #00000000

  ::-webkit-scrollbar-thumb
    background #ffffff22
    border-radius 2px
